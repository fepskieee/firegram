---
import Navbar from '@components/react/Navbar';

interface Props {
	title: string,
}

const { title } = Astro.props;
const brandName = "firegram";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="An image gallery to upload your favorite pictures." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gray-100">
    <Navbar {brandName} />
    <main class="w-full lg:max-w-screen-lg mx-auto">
      <slot />
    </main>
	</body>
</html>
