{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@firebase/*": ["src/shared/firebase/*"],
      "@dao/*": ["src/shared/dao/*"],
      "@utils/*": ["src/shared/utils/*"],
      "@hooks/*": ["src/shared/hooks/*"],
    },
  }
}